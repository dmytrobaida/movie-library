<html>
  <head>
    <meta charset="utf-8" />
    <title>{{directory}}</title>
  </head>
  <body>
    <h1>Contents of {{directory}}</h1>
    <ol>
      {{#each filesOrFolders}}
      <li style="display: flex; justify-content: space-between">
        <a href="{{this.url}}">{{this.name}}</a>
        {{#if this.deleteUrl}}
        <a href="{{this.deleteUrl}}">Delete</a>
        {{/if}}
      </li>
      {{/each}}
    </ol>

    {{#if mediaUrls.length}}
    <video id="media-viewer" preload="auto" width="640" height="264">
      {{#each mediaUrls}}
      <source
        src="{{this.url}}"
        type="application/x-mpegURL"
        label="{{this.name}}"
      />
      {{/each}}
    </video>
    {{/if}}
  </body>
</html>
